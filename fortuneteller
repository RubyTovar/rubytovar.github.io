	<script>
		var children = 5;
		var partner = "Harry";
		var location = "Dallas";
		var job = "Dentist";
		document.write("You will be a " + job + " in " + location + ", and married to" + partner + "with " + children + "kids.");
	</script>

	<script>
	//part 2
	function tellFuture(a,b,c,d){
		var future = "I will be a " + d " in" + c + " ,and married to " + b + " with " + a + " kids."
		document.write(future);

	}
	</script>

	<p><script>tellFuture(3, "Taylor", "Houston", "Chef");</script></p>
	<p><script>tellFuture(4, "Paulina", "Austin", "Director");</script></p>
	<p><script>tellFuture(1, "Erika", "Los Angeles", "Doctor");</script></p>
